<h1>Stock Status</h1>

<div class='search-area'>
  <%= form_tag search_stocks_path, method: :get do %> 
    <div class="form-group row">
      <div class="col-sm-3 no-right-padding">
        <%= text_field_tag :ticker, params[:ticker], placeholder:"Enter ticker symbol", autofocus: true, class: "form-control form-control-lg" %>
      </div>
      <div class="col-sm-3 no-left-padding">
        <%= button_tag type: :submit, class: "btn btn-success" do %>
          <%= 'search' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<%= render 'users/result' %>
<div class = "row">
  <div class="col-9">
    <% if @tracked_stocks.present? %>
      <%= render 'stocks/list' %>
    <% end %> 
  </div>
</div>